
{% extends 'layouts/base.njk' %}
{% set section = 'blog' %}


{% block sidebar %}
  <p class="by-line">{{ date | dateDisplay }} by <a href="/about">Phil Tutty</a></p>
  <h1>{{ title }}</h1>
  <ul class="tags">
  {% for tag in tags -%}
    <li><a href="/tags/{{ tag }}" class="tag">#{{ tag }}</a></li>
  {% endfor -%}
  </ul>
{% endblock %}


{% block content %}
  <div class="text-lg italic">
    {{ content | section | safe }}
  </div>
  {{ content | section('remainder') | safe }}
{% endblock %}


{% block prefooter %}
  {% include 'previous.njk' %}
{% endblock %}
